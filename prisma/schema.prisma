datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Archive {
    id              Int            @id @default(autoincrement())
    name            String
    l1Class         String
    l2Class         String
    type            String?
    tags            String[]
    UserFavourite   UserFavourite? @relation(fields: [userFavouriteId], references: [id])
    userFavouriteId Int?
    metadata        Metadata[]
    downloadCount   Int
    viewCount       Int
    favCount        Int
}

model Users {
    id            Int             @id @default(autoincrement())
    name          String
    password      String
    phone         String
    email         String
    UserFavourite UserFavourite[]
}

model Metadata {
    id        Int      @id @default(autoincrement())
    type      String
    href      String
    Archive   Archive? @relation(fields: [archiveId], references: [id])
    archiveId Int?
}

model UserFavourite {
    id      Int       @id @default(autoincrement())
    user    Users     @relation(fields: [userId], references: [id])
    userId  Int
    archive Archive[]
}
